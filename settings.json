{
  // Formatter per languages
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[php]": {
    "editor.defaultFormatter": "bmewburn.vscode-intelephense-client"
  },
  "[javascript]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[scss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[blade]": {
    "editor.defaultFormatter": "shufo.vscode-blade-formatter"
  },

  // Editor
  "editor.fontFamily": "Fira Code",
  "editor.fontSize": 16,
  "editor.fontWeight": "400",
  "editor.lineHeight": 32,
  "editor.fontLigatures": "'ss01', 'ss02', 'ss03', 'ss04', 'ss05', 'ss06', 'ss07', 'ss08', 'calt', 'dlig'",
  "editor.minimap.enabled": false,
  "editor.minimap.maxColumn": 250,
  "editor.lineNumbers": "off",
  "editor.guides.indentation": false,
  "editor.stickyScroll.enabled": false,
  "editor.renderWhitespace": "all",
  "editor.renderLineHighlight": "none",
  "editor.renderControlCharacters": false,
  "editor.detectIndentation": false,
  "editor.snippetSuggestions": "top",
  "editor.emptySelectionClipboard": false,
  "editor.copyWithSyntaxHighlighting": false,
  "editor.hover.enabled": true,
  "editor.hover.delay": 1000,
  "editor.colorDecorators": false,
  "editor.matchBrackets": "never",
  "editor.selectionHighlight": false,
  "editor.overviewRulerBorder": false,
  "editor.hideCursorInOverviewRuler": true,
  "editor.lightbulb.enabled": "off",
  "editor.gotoLocation.multipleReferences": "goto",
  "editor.gotoLocation.multipleDefinitions": "goto",
  "editor.gotoLocation.multipleDeclarations": "goto",
  "editor.gotoLocation.multipleImplementations": "goto",
  "editor.gotoLocation.multipleTypeDefinitions": "goto",
  "editor.multiCursorModifier": "ctrlCmd",
  "editor.wordWrap": "wordWrapColumn",
  "editor.wordWrapColumn": 120,
  "editor.quickSuggestions": {
    "strings": true
  },
  "editor.inlineSuggest.suppressSuggestions": true,
  "editor.accessibilitySupport": "off",
  "editor.padding.top": 16,
  "editor.cursorBlinking": "solid",

  // File explorer & nesting
  "explorer.fileNesting.patterns": {
    "pubspec.yaml": "pubspec.lock,pubspec_overrides.yaml,.packages,.flutter-plugins,.flutter-plugins-dependencies,.metadata",
    "*.dart": "${capture}.g.dart",
    "*.sqlite": "${capture}.${extname}-*",
    "*.db": "${capture}.${extname}-*",
    "*.sqlite3": "${capture}.${extname}-*",
    "*.db3": "${capture}.${extname}-*",
    "*.sdb": "${capture}.${extname}-*",
    "*.s3db": "${capture}.${extname}-*"
  },
  "files.autoSave": "afterDelay",
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.associations": {
    ".php_cs": "php",
    ".php_cs.dist": "php",
    "*.css": "css"
  },

  // Window & layout
  "workbench.colorTheme": "Catppuccin Mocha",
  "workbench.statusBar.visible": false,
  "workbench.activityBar.location": "hidden",
  "workbench.sideBar.location": "left",
  "workbench.editor.enablePreview": false,
  "workbench.editor.enablePreviewFromQuickOpen": false,
  "workbench.editor.showTabs": "none",
  "workbench.startupEditor": "none",
  "workbench.tree.indent": 15,
  "workbench.tree.enableStickyScroll": false,
  "workbench.tips.enabled": false,
  "workbench.editor.editorActionsLocation": "hidden",
  "workbench.navigationControl.enabled": false,
  "workbench.layoutControl.enabled": false,
  "window.menuBarVisibility": "compact",
  "window.newWindowDimensions": "inherit",
  "window.zoomLevel": 1,
  "window.title": "${rootName}",
  "window.commandCenter": false,

  // Dart & Flutter
  "dart.flutterSdkPath": "C:\\Users\\Rushel\\AppData\\Local\\flutter",
  "dart.debugExternalPackageLibraries": true,
  "dart.debugSdkLibraries": true,

  // Git
  "git.confirmSync": false,
  "git.autofetch": true,
  "git.decorations.enabled": true,
  "scm.diffDecorations": "all",

  // PHP
  "php.problems.exclude": {
    "/": ["PHP0413"]
  },

  // Emmet
  "emmet.preferences": {},

  // Search
  "search.useIgnoreFiles": false,
  "search.exclude": {
    "**/vendor/{[^l],?[^ai]}*": true,
    "**/public/{[^i],?[^n]}*": true,
    "**/node_modules": true,
    "**/dist": true,
    "**/_ide_helper.php": true,
    "**/composer.lock": true,
    "**/package-lock.json": true,
    "storage": true,
    ".phpunit.result.cache": true,
    ".next": true,
    "bun.lock": true
  },

  //   Terminal
  "terminal.integrated.fontSize": 16,
  "terminal.integrated.lineHeight": 1.5,

  // File behavior
  "javascript.updateImportsOnFileMove.enabled": "always",

  // Breadcrumbs
  "breadcrumbs.enabled": false,

  // Remote development
  "remote.portsAttributes": {
    "8000": {
      "protocol": "https"
    }
  },

  // Custom CSS/JS (VSCode modifications)
  "vscode_custom_css.imports": [
    "file:///D:/Codespace/vscode-settings/custom-vscode.css",
    "file:///D:/Codespace/vscode-settings/vscode-script.js"
  ],

  // Extensions
  "extensions.ignoreRecommendations": true,
  "catppuccin-noctis-icons.hidesExplorerArrows": false,
  "workbench.iconTheme": "catppuccin noctis icons"
}
